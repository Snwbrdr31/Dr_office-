<h1><h1>Add An Appointment </h1>
<hr />

<%= form_for @appointment do |f| %>
  <%= f.select :doctor_id, options_for_select(@doctors) %>
  <%= f.select :patient_id, options_for_select(@patients) %>

  <%= f.label :appointment_date %>
  <%= f.text_field :appointment_date, required: true, placeholder: 'Appointment Date' %>

  <%= f.label :appointment_time %>
  <%= f.text_field :appointment_time, require: true, placeholder: 'Appointment Time'%>


  <%= f.submit nil, class: 'btn' %>
<% end %>

<hr />
<%= link_to 'All Doctors', doctors_path, class: "btn" %>
<%= link_to 'All Patients', patients_path, class: "btn" %>
